<html>
<body background="images/skulls.png">
<head>
  <title>Sudoku Game</title>
    <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  </head>
  <body>
  <h1>Life is too short for playing Sudoku</h1>
  <div id="flash">
    <%= flash[:notice] %>
  </div>
  <div id="sudoku">
    
     <form action="/Easy" method="post">
     <input type = "submit" value="Easy Game" name="level">
     </form>
     
    <form action="/Medium" method="post">
     <input type = "submit" value="Medium Game" name="level">
     </form>

     <form action="/Difficult" method="post">
     <input type = "submit" value="Difficult Game" name="level">
     </form>

    <form action="/Answer" method="get">
     <input type = "submit" value="I give up" name="level">
     </form>


    <form action="/" method="post">
    <!-- all boxes, rows and cells -->   
      <button>Check solution</button>  

         <!-- one div for each row -->
    <% 3.times do |row| %>
    <div class='row'>
      <!-- we want to create seperate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
        <div class="box">
           <!-- each box will have nine cells -->
           <% 3.times do |cell_row| %>
                <div class="cell-row">
              <% 3.times do |cell| %>
                   <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                <% end %>
              </div>
            <%end %>
          </div>
         <% end %>
       </div>
      <% end %>
     </form>
    </div>   
    </div>


