<!-- "Hello sudoku" -->
<html>
<body background="images/skulls.png">
<head>
  <title>Sudoku Game</title>
    <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  </head>
  <body>
  <h1>Life is too short for playing Sudoku</h1>
  <div id="flash">
    <%= flash[:notice] %>
  </div>
  <div id="sudoku">
    <form action="/" method="post">
    <!-- all boxes, rows and cells -->   
      <button>Check solution</button>
    
    <!-- one div for each row -->
    <% 3.times do |row| %>
    <div class='row'>
      <!-- we want to create seperate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
        <div class="box">
           <!-- each box will have nine cells -->
           <% 3.times do |cell_row| %>
                <div class="cell-row">
              <% 3.times do |cell| %>
                   <div class="cell">
                    <!-- every cell will have an input field -->
                    <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                    <% cell_value = cell_value(@current_solution[cell_index]) %>
                    <% colour_class = colour_class(@check_solution, @puzzle[cell_index], @current_solution[cell_index], @solution[cell_index])  %>
                    <input name="cell[]" class="<%= colour_class %>" type="text" 
                      maxlength="1" autocomplete="off" value = "<%= cell_value %>" >
                  </div>
                <% end %>
              </div>
            <%end %>
          </div>
         <% end %>
       </div>
      <% end %>
     </form>
    </div>   
    </div>
    <div id="Easy">
      <form action="E" method="post">
      <button>Easy</button>
    </div>
    <div id="Medium">
      <form action="M" method="post">
      <button>Medium</button>
    </div>
    <div id="Difficult">
      <form action="D" method="post">
      <button>Dificult</button>
    </div>
 </body>
 </html>
